@page
@model StudyroomBookingZealand.Pages.Admin.EditBookingsModel
@{
}
<div>
    <h3>
        Are you sure you want to edit this booking?
    </h3>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <td>
                @Model.Booking.BookingID
            </td>
        </tr>
        <tr>
            <th>
                Location
            </th>
            <td>
                @Model.Booking.RoomId
            </td>
        </tr>
        <tr>
            <th>
                From Time
            </th>
            <td>
                @Model.Booking.FromDateTime
            </td>
        </tr>
        <tr>
            <th>
                To Time
            </th>
            <td>
                @Model.Booking.ToDateTime
            </td>
        </tr>
        <tr>
            <th>
                GroupId
            </th>
            <td>
                @Model.Booking.Student_GroupID
            </td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<td>
    <form method="post">
        <input align="right" type="submit" class="btn btn-danger" value="Update" style="background-color: red; color: white" asp-route-id="@Model.Booking.BookingID" asp-page="/Booking/EditBooking" />
    </form>
</td>         