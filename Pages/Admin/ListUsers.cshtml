@page

@model StudyroomBookingZealand.Pages.Admin.ListUsersModel
@{
}


<div class="col-sm">
    <form class="form-inline">
        <div class="form-group mx-sm-3 mb-2">
            <input type="text" placeholder="Name" class="form-control " asp-for="@Model.SearchCriteria">
            <button type="submit" class="btn btn-primary mb-2" style="background: black">Search</button>
            <a type="button" class="btn btn-primary mb-2" style="background: black" asp-page="CreateAccount">Create +</a>
        </div>
    </form>
</div>



<table class="table">
    <thead  style="background-color:#FFE975;">
    <tr>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Email
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Username
        </th>
        <th>
            Teacher
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Users != null)
    {
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.PhoneNr
                </td>
                <td>
                    @item.Username
                </td>
                <td>
                    @(item.IsTeacher ? "Yes" : "No")
                </td>
                <td>
                    <a asp-page="/Admin/EditUser" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="/Admin/DeleteUser" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
<div>
    <a class="btn btn-primary" style="background: black" asp-page="/Admin/Admin">Back</a>
</div>