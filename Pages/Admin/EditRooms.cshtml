@page
@using StudyroomBookingZealand.Models
@model StudyroomBookingZealand.Pages.Admin.EditRoomsModel
@{
}
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Room.RoomId" /> @*MAKE SURE YOU DONT FORGET THIS, OR ELSE THE MODEL LOSES THE ID ON THE ONPOST METHOD. TOOK ME 2 HOURS TO UNDERSTAND WHY THE UPDATE WAS NOT WORKING*@
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="@Model.Room.LocationId"> Location Name </label>
            <select name="LocationId" asp-items="Model.Options"></select>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Room.Name"> Name </label>
            <input asp-for="@Model.Room.Name" class="form-control"/>
        </div>
        <div class="form-group">
            <select asp-for="@Model.Room.Type" asp-items="Html.GetEnumSelectList<Room.TypeList>()">
                <option value="">Choose a group</option>
            </select>
            <label asp-for="@Model.Room.SmartBoard"> Check if the room has a smartboard </label>
            @Html.EditorFor(model => model.Room.SmartBoard)
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-outline-primary" value="Save Changes"/>
        </div>
    </div>
</form>
<div>
    <a asp-page="/Admin/ListRooms">Back</a>
</div>