@page
@using Microsoft.EntityFrameworkCore
@using StudyroomBookingZealand.Models
@model StudyroomBookingZealand.Pages.Admin.CreateLocationModel
@{
}
<form method="post">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="@Model.Location.Name"> Location Name </label>
            <input asp-for="@Model.Location.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Location.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Location.Address"> Address </label>
            <input asp-for="@Model.Location.Address" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Location.Address"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-outline-primary" value="Create" />
        </div>
    </div>
</form>

<div>
    <a asp-page="/Admin/ListLocations">Back</a>
</div>