@using System.Net
@using Microsoft.AspNetCore.Http
@using Microsoft.VisualBasic

@* Fount the REAL stuff for Zealand logo
    https://moodle.zealand.dk/pluginfile.php/1/core_admin/logo/0x200/1620740136/Zealand%20Logo%20-%20Moodle.png*@

<style>
    .navbar {
        background-color: #ffe766
    }
    .nav-link {
        color: black
    }
    .card {
        border-color: transparent;
        background-color: #FFE766;
    }

    .card-image {
        height: 100px;
        width: 200px;
    }

    .footer:hover {
        background-color: #FFE766;
    }

    .card:hover {
        /*box-shadow: 8px 8px 8px lightgrey;*/
        background-color: #FFE766;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudyroomBookingZealand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="https://moodle.zealand.dk/pluginfile.php/1/core_admin/logo/0x200/1620740136/Zealand%20Logo%20-%20Moodle.png" height="25" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="" role="button"><i class="fa fa-bars" aria-hidden="true" style="color:black"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Privacy">Privacy</a>
                        </li>
                        @{
                            if (!Pages.User.CurrentUser.Exists)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/User/Login">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/User/Logout">Logout</a>
                                </li>
                            }
                        }
                        @{
                            if (Pages.User.CurrentUser.Exists)
                            {
                                if (!Pages.User.CurrentUser.LoggedUser.IsTeacher)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Bookings/StartBooking">Book</a>
                                    </li>
                                }
                                {
                                    <div class="nav-item">
                                        <a asp-page="/User/Profile/ProfilePage" class="nav-link text-dark">@Pages.User.CurrentUser.LoggedUser.FirstName</a>
                                    </div>
                                }
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - StudyroomBookingZealand - <a asp-area="" asp-page="/Privacy">Privacy</a>

            <div class="card-image" style="background-color: transparent">
                <a href="https://zealand.com/">
                    <img src="/images/Zealand-Logo.png" class="card-img-bottom" alt="" align="right" />
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
