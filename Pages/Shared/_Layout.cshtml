@using System.Net
@using Microsoft.AspNetCore.Http
@using Microsoft.VisualBasic
@using StudyroomBookingZealand.Services.Interfaces;
@inject IWarning WarningService
@* Fount the REAL stuff for Zealand logo
    https://moodle.zealand.dk/pluginfile.php/1/core_admin/logo/0x200/1620740136/Zealand%20Logo%20-%20Moodle.png*@

<style>
    .navbar {
        background-color: #ffe766
    }

    .nav-link {
        color: black
    }

    .card {
        border-color: transparent;
        background-color: #FFE766;
    }

    .card-image {
        height: 100px;
        width: 200px;
    }

    .footer:hover {
        background-color: #FFE766;
    }

    /*.card:hover {*/
        /*box-shadow: 8px 8px 8px lightgrey;*/
        /*background-color: #FFE766;
    }*/
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudyroomBookingZealand</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/profilepage.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>


</head>
<body>
    <header>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="https://moodle.zealand.dk/pluginfile.php/1/core_admin/logo/0x200/1620740136/Zealand%20Logo%20-%20Moodle.png" height="25" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="" role="button"><i class="fa fa-bars" aria-hidden="true" style="color:black"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Privacy">Privacy</a>
                        </li>
                        @{
                            if (!Pages.User.CurrentUser.Exists)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/User/Login">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/User/Logout">Logout</a>
                                </li>
                            }
                        }
                        @{
                            if (Pages.User.CurrentUser.Exists)
                            {
                                if (!Pages.User.CurrentUser.LoggedUser.IsTeacher)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Bookings/StartBooking">Book</a>
                                    </li>
                                }
                                {
                                    <li class="nav-item">
                                        <a asp-page="/User/Profile/ProfilePage" class="nav-link text-dark">@Pages.User.CurrentUser.LoggedUser.FirstName</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" data-toggle="modal" data-target="#WarningModal">Warnings</a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (Pages.User.CurrentUser.Exists)
    {
    <div class="modal fade" id="WarningModal" tabindex="-1" role="dialog" aria-labelledby="WarningModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="WarningModalLabel">Your warnings</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (WarningService.GetWarningsForUser(Pages.User.CurrentUser.LoggedUser.Id).Count > 0)
                    {
                        <table class="table">
                            @foreach (Models.Warning warning in WarningService.GetWarningsForUser(Pages.User.CurrentUser.LoggedUser.Id))
                            {
                                <tr>
                                    <td>@warning.Content</td>
                                        <td><a class="btn btn-primary" asp-route-id="@warning.Id" asp-page="/User/Profile/ProfilePage">Go to</a></td>
                                </tr>
                            }
                        </table>
                    }
                    else
                    {
                            <span class="text">You do not have any new notifications</span>
                    }
                </div>
            </div>
        </div>
    </div>
    }
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - StudyroomBookingZealand - <a asp-area="" asp-page="/Privacy">Privacy</a>

            <div class="card-image" style="background-color: transparent">
                <a href="https://zealand.com/">
                    <img src="/images/Zealand-Logo.png" class="card-img-bottom" alt="" align="right" />
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
