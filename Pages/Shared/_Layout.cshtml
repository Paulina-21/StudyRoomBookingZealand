@using System.Net
@using Microsoft.AspNetCore.Http
@using Microsoft.VisualBasic

<style>
    .header {
        background-color: #ffe766
    }
    .card {
        border-color: transparent;
        background-color: #FFE766;
    }

    .card-image {
        height: 100px;
        width: 200px;
    }
    .footer:hover{
        background-color: #FFE766;
    }

    .card:hover {
        /*box-shadow: 8px 8px 8px lightgrey;*/
        background-color: #FFE766;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - StudyroomBookingZealand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light @*bg-white*@ border-bottom box-shadow mb-3" style="background-color: rgba(255, 231, 102, 0.9)">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">StudyroomBookingZealand</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @{
                            if (!Pages.User.CurrentUser.Exists)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/User/Login">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/User/Logout">Logout</a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Locations/ListLocations">Locations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Locations/Rooms/ListRooms">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Bookings/ListBookings">Bookings</a>
                        </li>
                        @{
                            if (Pages.User.CurrentUser.Exists)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Bookings/BookLocation">Book</a>
                                </li>
                            }
                        }

                    </ul>
                    @{if (Pages.User.CurrentUser.Exists)
                        {
                            <div class="text">
                                <a asp-page="/User/Profile/ProfilePage" class="text-dark">@Pages.User.CurrentUser.LoggedUser.Name</a>
                            </div>
                        }
                     }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - StudyroomBookingZealand - <a asp-area="" asp-page="/Privacy">Privacy</a>
            
                <div class="card-image" style="background-color: transparent">
                    <a href="https://zealand.com/">
                        <img src="/images/Zealand-Logo.png" class="card-img-bottom" alt="" align="right" />
                    </a>
                </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
