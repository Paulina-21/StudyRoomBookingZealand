@page "ProfilePage"
@model StudyroomBookingZealand.Pages.User.Profile.ProfilePageModel
@{
    ViewData["Title"] = "ProfilePage";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudyroomBookingZealand</title>

    <title>User Profile</title>
    <link rel="stylesheet" href="~/css/profilepage.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

</head>


<div class="container bootstrap snippets ">
    <div class="row">
        <div class="profile-nav col-md-3">
            <div class="panel">
                <div class="user-heading round">
                    <a href="#">
                        <img src="https://thumbs.dreamstime.com/b/default-avatar-profile-icon-social-media-user-vector-default-avatar-profile-icon-social-media-user-vector-portrait-176194876.jpg" alt="">
                    </a>
                    <h1 class="text-black-50 font-weight-bolder">@CurrentUser.LoggedUser.FullName</h1>
                    @if(CurrentUser.IsAdmin){<p class="text-black-50"><b>ADMIN</b></p>}else{<p class="text-black-50"><b>Student</b></p>}
                    
                </div>

                <ul class="nav nav-pills nav-stacked">

                    <li><a asp-page="EditProfile"> <i class="fa fa-edit"></i> Edit profile</a></li>
                    <li><a asp-page="EditProfile"> <i class="fa fa-edit"></i> ManageGroups</a></li>
                </ul>
            </div>
        </div>
        <div class="profile-info col-md-9">
            <div class="panel">
                <div class="panel-body bio-graph-info">
                    <h1>Your Information</h1>
                    <div class="row">
                        <div class="bio-row">
                            <p><span>First Name </span>: @CurrentUser.LoggedUser.FirstName</p>
                        </div>
                        <div class="bio-row">
                            <p><span>Last Name </span>: @CurrentUser.LoggedUser.LastName</p>
                        </div>
                        <div class="bio-row">
                            <p><span>Address </span>: @CurrentUser.LoggedUser.Address</p>
                        </div>
                        <div class="bio-row">
                            <p><span>Email</span>: @CurrentUser.LoggedUser.Email</p>
                        </div>
                        <div class="bio-row">
                             <p><span>Phone </span>: @CurrentUser.LoggedUser.PhoneNr</p>
                        </div>
                        <div class="bio-row">
                            <p><span>Username </span>: @CurrentUser.LoggedUser.Username</p>
                        </div>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
    </div>
</div>