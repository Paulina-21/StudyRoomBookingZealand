@page "ProfilePage"
@model StudyroomBookingZealand.Pages.User.Profile.ProfilePageModel
@{
    ViewData["Title"] = "ProfilePage";
}
<h1> Profile </h1>
<div>
    @if (Model.HasInvitations) 
    {
        <span class="text">You have been invited to new groups</span>
        <a class="btn-primary" asp-page="Invitations">Check invitations</a>
    }
</div>
<div class="box">
    <div class="row">
        Name: @CurrentUser.LoggedUser.Name
        Phone number: @CurrentUser.LoggedUser.PhoneNr
    </div>
    <div class="row">
        Group:
        <div>
            <form method="post">
                <input class="text" asp-for="NewGroupMember" placeholder="Dude's name" />
                @if (Model.InvalidName==1)
                {<span class="text-danger">This user couldn't be found</span>}
                else if(Model.InvalidName==2)
                {
                 <span class="text-success">Invitation sent</span>
                }
                <input class="btn-primary" type="submit" value="Add member" />
            </form>
        </div>
    </div>
</div>
