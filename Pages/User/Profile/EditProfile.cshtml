@page "EditProfile"
@model StudyroomBookingZealand.Pages.User.Profile.EditProfileModel
@{
}

<div class="container bootstrap snippets bootdey">
    <h1 style="color: black"><span class="glyphicon glyphicon-user"></span>Edit Profile</h1>
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
            <div class="text-center">
                <img src="" class="avatar img-circle" alt="avatar">
                <h6>Upload a different photo...</h6>

                <input type="file" class="form-control">
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">

            <h3>Personal info</h3>

            <form method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.LoggedUser.Id"/>
                    <input type="hidden" asp-for="@Model.LoggedUser.Username"/>
                    <input type="hidden" asp-for="@Model.LoggedUser.Password"/>
                    <input type="hidden" asp-for="@Model.LoggedUser.Email"/>
                    <label asp-for="@Model.LoggedUser.FirstName" class="col-lg-3 control-label">First name:</label>
                    <div class="col-lg-8">
                        <input asp-for="@Model.LoggedUser.FirstName" class="form-control" type="text">
                    </div>
                    <span class="text-danger" asp-validation-for="@Model.LoggedUser.FirstName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LoggedUser.LastName" class="col-lg-3 control-label">Last name:</label>
                    <div class="col-lg-8">
                        <input asp-for="@Model.LoggedUser.LastName" class="form-control" type="text">
                    </div>
                    <span class="text-danger" asp-validation-for="@Model.LoggedUser.LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LoggedUser.Address" class="col-lg-3 control-label">Address:</label>
                    <div class="col-lg-8">
                        <input asp-for="@Model.LoggedUser.Address" class=" form-control" type="text">
                    </div>
                    <span class="text-danger" asp-validation-for="@Model.LoggedUser.Address"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LoggedUser.PhoneNr" class="col-lg-3 control-label">Phone:</label>
                    <div class="col-lg-8">
                        <input asp-for="@Model.LoggedUser.PhoneNr" class="form-control" type="text">
                    </div>
                    <span class="text-danger" asp-validation-for="@Model.LoggedUser.PhoneNr"></span>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <input type="submit" style="background: black" class="btn btn-primary btn-outline-primary" value="Save Changes"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>
