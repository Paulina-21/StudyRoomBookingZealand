@page "EditProfile"
@model StudyroomBookingZealand.Pages.User.Profile.EditProfileModel
@{
}
<h1>Edit your account</h1>

<form method="post">
    <div class="col-md-4">
        <div class="form-group">
            <input type="hidden" asp-for="@Model.LoggedUser.Id" />
            <label asp-for="@Model.LoggedUser.FirstName"> First Name </label>
            <input asp-for="@Model.LoggedUser.FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.LoggedUser.LastName"> Last Name </label>
            <input asp-for="@Model.LoggedUser.LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.LoggedUser.Address"> Address </label>
            <input asp-for="@Model.LoggedUser.Address" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.LoggedUser.Password"> Password </label>
            <input asp-for="@Model.LoggedUser.Password" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.LoggedUser.PhoneNr"> Phone Number </label>
            <input asp-for="@Model.LoggedUser.PhoneNr" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-outline-primary" value="Save Changes" />
        </div>
    </div>
</form>
<div>
    <a asp-page="/ProfilePage">Discard Changes</a>
</div>
