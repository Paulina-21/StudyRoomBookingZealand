@page
@model StudyroomBookingZealand.Pages.Locations.DeleteLocationModel
@using StudyroomBookingZealand.Pages.User
@using Microsoft.CodeAnalysis.CSharp.Syntax
@using StudyroomBookingZealand.Services.Interfaces
@{
}
@inject ILocations LocationsService
<div>
    <h3>
        Are you sure you want to delete this Location?
    </h3>
</div>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <td>
                @Model.Location.LocationId
            </td>
        </tr>
        <tr>
            <th>
                Name
            </th>
            <td>
                @Model.Location.Name
            </td>
        </tr>
        <tr>
            <th>
                Address
            </th>
            <td>
                @Model.Location.Address
            </td>
        </tr>
        <tr>
            <th>
                Rooms
            </th>
            @{
                <td>
                    @LocationsService.GetRoomsForLocation(Model.Location.LocationId).Count
                </td>
            }

        </tr>

    </thead>
    <tbody>
    </tbody>
</table>
<td>
    <form method="post">
        <input align="right" type="submit" class="btn btn-danger" value="Remove" style="background-color: red; color: white" asp-route-id="@Model.Location.LocationId" asp-page="/Locations/DeleteLocation" />
    </form>
    <div class="badge-pill">
        <br/>
        <a class="float-left" asp-page="/Admin/ListLocations"> Click here to go Back</a>
    </div>
</td>         