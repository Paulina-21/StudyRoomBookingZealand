@page
@model StudyroomBookingZealand.Pages.Locations.ListLocationsModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Location Name
            </th>
            <th>
                Address
            </th>
            <th>
                SmartBoards Number
            </th>
            <th>
                Booking Count
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Locations)
        {
            <tr>
                <td>
                    @item.LocationId
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.SmartBoardsNr
                </td>
                @{ if (item.Bookings == null)
                    {
                        <td>
                            0
                        </td>
                    }
                    else
                    {
                        <td>
                            @item.Bookings.Count
                        </td>
                    }
                }
            <td>
                @* Just some placeholders for future functionality *@
                <a asp-page="/Locations/Rooms/ListRooms" asp-route-id="@item.LocationId">Rooms</a>|
                <a asp-page="" asp-route-id="">Edit</a> |
                <a asp-page="" asp-route-id="">Delete</a>
            </td>
            </tr>
        }
    </tbody>
</table>
