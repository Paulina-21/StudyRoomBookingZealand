@page
@using StudyroomBookingZealand.Pages.User
@model StudyroomBookingZealand.Pages.Bookings.DeleteBookingModel
@{
}
<div>
    <h3>
        Are you sure you want to delete this booking?
    </h3>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <td>
                @Model.booking.BookingID
            </td>
        </tr>
        <tr>
            <th>
                Location
            </th>
            <td>
                @Model.booking.RoomId
            </td>
        </tr>
        <tr>
            <th>
                From Time
            </th>
            <td>
                @Model.booking.FromDateTime
            </td>
        </tr>
        <tr>
            <th>
                To Time
            </th>
            <td>
                @Model.booking.ToDateTime
            </td>
        </tr>
        <tr>
            <th>
                SmartBoardBooked?
            </th>
            <td>
                @Model.booking.SmartBoardBooked
            </td>
        </tr>
        <tr>
            <th>
                GroupId
            </th>
            <td>
                @Model.booking.Student_GroupID
            </td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<td>
    @if (CurrentUser.IsAdmin)
    {
    <form method="post">
        <input align="right" type="submit" class="btn btn-danger" onclick="return alert('This booking will be deleted in 3 days now. A warning has been sent to all members. You can now leave this page')" value="Remove" style="background-color: red; color: white" asp-route-id="@Model.booking.BookingID" asp-page="/Booking/DeleteBooking" />
    </form>
    }
    else
    {
    <form method="post">
        <input align="right" type="submit" class="btn btn-danger" value="Remove" style="background-color: red; color: white" asp-route-id="@Model.booking.BookingID" asp-page="/Booking/DeleteBooking" />
    </form>
    }

</td>         