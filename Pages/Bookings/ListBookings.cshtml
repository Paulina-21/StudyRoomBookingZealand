@page
@using StudyroomBookingZealand.Pages.User
@model StudyroomBookingZealand.Pages.Bookings.ListBookingsModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Time
            </th>
            <th>
                Location
            </th>
            <th>
                Group
            </th>
            <th>
                SmartBoard?
            </th>
            <th>
                SmartBoard Booked ?
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Bookings)
    {
        <tr>
            <td>
                @item.BookingID
            </td>
            <td>
                @item.DateTime
            </td>
            <td>
                @item.LocationId
                </td>
            <td>
                @item.Student_GroupID
            </td>
            <td>
                @item.LocationId
            </td>
            <td>
                @item.SmartBoardBooked
            </td>
            @if (CurrentUser.LoggedUser!=null && CurrentUser.LoggedUser.IsTeacher )
            {
        <td>
            @* Just some placeholders for future functionality *@
            <a asp-page="/Bookings/EditBooking" asp-route-id="@item.BookingID">Edit</a> |
            <a asp-page="/Bookings/DeleteBooking" asp-route-id="@item.BookingID">Delete</a>
        </td>
            }
            @if (CurrentUser.LoggedUser!=null && CurrentUser.LoggedUser.GroupId==item.Student_GroupID )
            {
                <td>
                    @* Just some placeholders for future functionality *@
                    <a asp-page="/Bookings/EditBooking" asp-route-id="@item.BookingID">Edit</a> |
                    <a asp-page="/Bookings/DeleteBooking" asp-route-id="@item.BookingID">Delete</a>
                </td>
            }
        </tr>
    }
    </tbody>
</table>
